#!/usr/bin/env bash
#Programs that are detached from the terminal and running in the background are called daemons or processes
#!/usr/bin/env bash
#Programs that are detached from the terminal and running in the background are called daemons or processs
case $1 in
  start)
    if [ -f /var/run/my_process.pid ]; then
      echo "manage_my_process already running with PID $(cat /var/run/my_process.pid)"
      exit 1
    fi
    /path/to/manage_my_process &
    echo $! > /var/run/my_process.pid
    echo "manage_my_process started"
    ;;
  stop)
    if [ ! -f /var/run/my_process.pid ]; then
      echo "manage_my_process is not running"
      exit 1
    fi
    kill "$(cat /var/run/my_process.pid)"
    rm /var/run/my_process.pid
    echo "manage_my_process stopped"
    ;;
  restart)
    if [ -f /var/run/my_process.pid ]; then
      kill "$(cat /var/run/my_process.pid)"
      rm /var/run/my_process.pid
    fi
    /path/to/manage_my_process &
    echo $! > /var/run/my_process.pid
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
